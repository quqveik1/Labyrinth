<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/howToPlayHandleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Как играть?"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/howToPlayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Ваша задача пройти лабиринт от начала до конца\n2. Управлять персонажем можно с помощью стрелочек внизу или при помощи свайпов по лабиринту\n3. Статистику прохождений можно посмотреть в меню Моя статистика"
        android:textSize="20sp"
        android:gravity="left"/>

</LinearLayout>